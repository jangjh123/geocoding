<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment8">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:text="대리운전 호출"
        android:background="@drawable/darie_oonjeon_hochul_button"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/darie_oonjeon_hochul_button"
        android:layout_weight="3">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/myblank"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/myView"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/myView"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="앱호출"
                    android:layout_below="@+id/myView"
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/b_square"
                android:text="환경설정"
                android:textColor="@color/white"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="5">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/b_square"
                android:text="대리접수 내역조회"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="공지사항"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="마일리지"
            android:layout_weight="8"
            android:background="@color/white"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="고객 적립"
            android:textColor="@color/white"
            android:background="@drawable/darie_oonjeon_hochul_button"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="잔액"
            android:background="@drawable/b_square"
            android:textColor="@color/white"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@drawable/edit"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="출금 요청"
            android:background="@drawable/b_square"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/darie_oonjeon_hochul_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="제휴사"
            android:textStyle="bold"
            android:background="@drawable/darie_oonjeon_hochul_button"
            android:textColor="@color/white"
            android:textSize="18dp"/>

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:background="@color/white"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="쿠폰관리"
            android:textStyle="bold"
            android:background="@drawable/darie_oonjeon_hochul_button"
            android:textColor="@color/white"
            android:textSize="18dp"/>

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:background="@color/white"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="가맹점"
            android:textStyle="bold"
            android:background="@drawable/darie_oonjeon_hochul_button"
            android:textColor="@color/white"
            android:textSize="18dp"/>

    </LinearLayout>


</LinearLayout>